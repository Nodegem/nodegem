[Unit]
Description=Nodegem

[Service]
Environment=DOTNET_ROOT=/usr/bin/dotnet
WorkingDirectory=/var/nodegem
Type=simple
User=nodegemserviceuser
Group=nodegemserviceuser
ExecStart=/var/nodegem/Nodegem.ClientService -u ${username} -p ${password}
Restart=on-failure

[Install]
WantedBy=multi-user.target
